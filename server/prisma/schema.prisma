generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  status_id         String
  username          String
  password          String
  first_name        String
  last_name         String
  email             String    @unique
  portrait          String?
  phone_number      String?
  accountType       String
  isShop            Boolean   @default(false)
  email_verified_at Boolean   @default(false)
  last_login_at     DateTime?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
}
